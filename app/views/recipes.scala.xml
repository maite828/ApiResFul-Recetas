@(recipes: List[Recipe])
									<!-- lista -->
<recipes>
	@for(r <- recipes){
	<recipe id="@r.getId()">
		<name>@r.getName</name>
		<portions>@r.getPortions</portions>	
		<createdAt>@r.getDateCreation</createdAt>
	</recipe>
	}
</recipes>	

									<!-- detalle -->
<recipes>
	@for(r <- recipes){
		@recipe(r)
	}
</recipes>