# An example controller showing a sample home page
GET     /                       controllers.HomeController.index

GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

GET     /ingredientes           controllers.IngredientesController.list

GET     /tasks                  controllers.TasksController.list

# listar todas las recetas
GET   	/recetas       			controllers.RecetasController.list

# obtener datos de una receta
GET 	/receta/:id      controllers.RecetasController.retrieve(id: Long)

# obtener datos de una receta de la cach√©
GET 	/recetacache/:id      	controllers.RecetasController.retrieveCache(id: Long)

# crear un receta
POST 	/recetas        		controllers.RecetasController.create

#Return the recipe with the given name
GET		/receta/name/:name		controllers.RecetasController.getByName(name: String)

#Delete the recipe with the given id
DELETE	/receta/:id				controllers.RecetasController.remove(id: Long)

#Update the recipe with the given id
PUT		/receta/:id				controllers.RecetasController.update(id: Long)

#Return a list of recipes with the given tag
GET 	/receta/tag/:name		controllers.RecetasController.getRecipesByTag(name: String)
